{
  "name": "iza-os-ecosystem",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "dev": "nx run-many --target=dev --all --parallel",
    "clean": "nx reset && rm -rf node_modules",
    "install:all": "npm install && nx run-many --target=install --all"
  },
  "devDependencies": {
    "@nx/workspace": "^17.0.0",
    "nx": "^17.0.0",
    "typescript": "^5.1.0",
    "prettier": "^3.0.0",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}